{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "types": ["jest", "node"]
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "dist/**/*"]
}
